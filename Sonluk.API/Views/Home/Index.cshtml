@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Sonluk API</title>
    <link href="~/sonluk.ico" rel="shortcut icon" type="image/x-icon" />
    <style>
        body {
            font-family: 'Microsoft YaHei', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .title {
            height: 30px;
            line-height: 30px;
            font-size: 30px;
            margin-top: 20px;
            margin-bottom: 20px;
        }

        .content {
            position: absolute;
            top: 70px;
            right: 0;
            bottom: 0;
            left: 0;
            overflow-x: auto;
            border-top: 1px solid #d4d4d4;
        }

        .module {
            margin-top: 10px;
            margin-left: 10px;
            margin-bottom: 10px;
        }

        .module-title {
            font-weight: bold;
            /*padding-left:4px;*/
        }

        .module-items {
            height: auto;
            overflow: hidden;
        }

        .module-item {
            margin-left: 1em;
            width: 200px;
            float: left;
        }

        a:hover {
            text-decoration: none;
            color: #000;
        }

        a:link {
            text-decoration: none;
            color: black;
        }

        a:visited {
            text-decoration: none;
            color: #000;
        }
    </style>
</head>
<body>
    <div class="title">Sonluk Application Programming Interface</div>
    <div class="content" style="margin-bottom:65px">
        <div class="module">
            <div class="module-title">API</div>
            <div class="module-items">
                <div class="module-item"><a href="@Url.Action("List","Doc")">Sonluk Api</a></div>
            </div>
        </div>
        @*=============================================================*@
        @*== 请在 ~/Views/Shared/Partial_WS.cshtml 中更新 WebService ==*@
        @*=============================================================*@
        @Html.Partial("~/Views/Shared/Partial_WS.cshtml")
    </div>
    <div style="text-align: center;position:absolute;z-index:9999;font-size:24px;width:100%;bottom:0;margin-bottom:15px;font-size:24px;">
        <hr>

        中银（宁波）电池有限公司 版权所有&nbsp;
        <a href="http://www.beian.miit.gov.cn">浙ICP备13023860号-3</a>
    </div>
</body>
</html>
